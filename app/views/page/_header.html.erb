<div class="header">
  <div class="logo">
    <div class="text"><%= t('header.sports_hub') %></div>
  </div>
  <div class="search">
    <div class="icon-search"></div>
    <input class="" type="text" placeholder="<%= t('header.search_by') %>" />
  </div>
  <div class="social">
    <span><%= t('header.share') %></span>
    <div class="fb"></div>
    <div class="tw"></div>
    <div class="gp"></div>
  </div>
  <div class="user">
    <div class="ellipse"></div>
    <span class="title">
      <% user = current_user %>
      <% if user.firstname %>
        <%= user.firstname + ' ' + user.lastname %>
      <% else %>
        <%= user.email %>
      <% end %>
    </span>
    <span class="polygon"></span>
  </div>
  <div class="lang">
    <span><%= params[:locale] %></span>
    <span class="polygon"></span>
  </div>
</div>
