
<%= render 'header' %>

<h1>Home</h1>
<div class="top-menu">
  <% @categories.each do |category| %>
    <a href=""><%= category.name %></a>
  <% end %>
</div>

<h3>Users</h3>
<table>
  <tr>
    <th>Firstname</th>
    <th>Lastname</th>
    <th>Email</th>
    <th>Status</th>
  </tr>
  <% @users.each do |user| %>
    <tr>
      <td><%= user.firstname %></td>
      <td><%= user.lastname %></td>
      <td><%= user.email %></td>
      <td><%= (user.account_active?) ? 'active' : 'blocked' %></td>
      <td><%= block_or_activate_user_link(user) %></td>
    </tr>
  <% end %>
</table>
